.container {
  padding: 32rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

.goal-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  background: #4ECDC4;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.add-icon {
  font-size: 32rpx;
}

.goals-list {
  margin-top: 16rpx;
}

.goal-item {
  padding: 24rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goal-main {
  flex: 1;
  margin-right: 24rpx;
}

.delete-btn {
  width: 80rpx;
  height: 56rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.goal-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.goal-progress {
  display: flex;
  align-items: center;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 16rpx;
}

.progress-fill {
  height: 100%;
  background: #4ECDC4;
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  width: 60rpx;
}

.empty-tip {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  padding: 32rpx 0;
}
