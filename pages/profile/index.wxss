/* pages/profile/index.wxss */
.profile-container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
}

.avatar-wrapper {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-info {
  margin-top: 24rpx;
  text-align: center;
}

.nickname {
  font-size: 36rpx;
  color: #2C3E50;
  font-weight: 600;
}

/* 数据统计区域 */
.stats-section {
  display: flex;
  justify-content: space-between;
  background: #FFFFFF;
  padding: 32rpx;
  border-radius: 24rpx;
  margin: 24rpx 0 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 40rpx;
  color: #4ECDC4;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #94A3B8;
}

/* 成就徽章区域 */
.achievements-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  color: #2C3E50;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.badges-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
}

.badge-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  border-radius: 16rpx;
  background: #F8FAFC;
  transition: all 0.3s ease;
}

.badge-item.unlocked {
  background: #F0FDF9;
}

.badge-emoji {
  font-size: 60rpx;
  margin-bottom: 12rpx;
  opacity: 0.8;
  line-height: 1;
}

.badge-item.unlocked .badge-emoji {
  opacity: 1;
}

.badge-name {
  font-size: 24rpx;
  color: #64748B;
  text-align: center;
  margin-bottom: 4rpx;
}

.badge-item.unlocked .badge-name {
  color: #0F766E;
  font-weight: 500;
}

.badge-progress {
  font-size: 20rpx;
  color: #94A3B8;
}

/* 成就徽章区域 */
.achievements-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  text-align: center;
  color: #333;
}

.badges-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx 0;
}

.badge-item {
  background: #F8FAFC;
  padding: 32rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border: 2rpx solid #E2E8F0;
  margin-bottom: 20rpx;
}

.badge-item.unlocked {
  background: #F0FDF9;
  border-color: #4ECDC4;
}

.badge-info {
  flex: 1;
  margin-right: 20rpx;
}

.badge-name {
  font-size: 34rpx;
  color: #334155;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.badge-desc {
  font-size: 26rpx;
  color: #64748B;
}

.badge-progress {
  font-size: 28rpx;
  color: #94A3B8;
  background: rgba(0, 0, 0, 0.05);
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
  min-width: 100rpx;
  text-align: center;
}

.badge-unlocked {
  font-size: 28rpx;
  color: #4ECDC4;
  font-weight: 500;
  background: rgba(76, 205, 196, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 100rpx;
}

.no-badges {
  text-align: center;
  color: #94A3B8;
  padding: 40rpx;
  font-size: 28rpx;
}

.badge-item.unlocked .badge-name {
  color: #0F766E;
}

