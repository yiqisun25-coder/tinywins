/* 关于信息 */
.about-section {
  text-align: center;
  padding: 40rpx 0;
}

.app-name {
  display: block;
  font-size: 28rpx;
  color: #64748B;
  margin-bottom: 8rpx;
}

.app-desc {
  font-size: 24rpx;
  color: #94A3B8;
}