
.container {
	padding: 24rpx;
	background: #f8f9fa;
	min-height: 100vh;
}

/* 用户信息区域 */
.user-section {
	background: #fff;
	border-radius: 20rpx;
	padding: 32rpx 24rpx;
	margin-bottom: 24rpx;
	box-shadow: 0 8rpx 32rpx rgba(76,205,196,0.08);
}

.user-info {
	display: flex;
	align-items: center;
}

.avatar {
	width: 120rpx;
	height: 120rpx;
	border-radius: 60rpx;
	margin-right: 24rpx;
	border: 4rpx solid #4ECDC4;
}

.user-details {
	flex: 1;
}

.nickname {
	font-size: 36rpx;
	color: #333;
	font-weight: bold;
	margin-bottom: 8rpx;
	display: block;
}

.user-stats {
	font-size: 28rpx;
	color: #666;
	display: block;
}

/* 成就区域 */
.section {
	background: #fff;
	border-radius: 20rpx;
	padding: 32rpx 24rpx;
	box-shadow: 0 8rpx 32rpx rgba(76,205,196,0.08);
}

.section-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 24rpx;
}

.title {
	font-size: 36rpx;
	color: #2C5530;
	font-weight: bold;
}

.export-btn {
	display: flex;
	align-items: center;
	background: #4ECDC4;
	padding: 12rpx 24rpx;
	border-radius: 32rpx;
	color: #fff;
	font-size: 28rpx;
}

.export-icon {
	margin-right: 8rpx;
}

.export-section {
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  padding: 0 24rpx;
  display: flex;
  justify-content: center;
}
.achievement-grid {
	display: grid;
	grid-template-columns: repeat(2, 1fr);
	gap: 24rpx;
	padding: 0 12rpx;
}

.achievement-card {
	background: #f8f8f8;
	border-radius: 15rpx;
	padding: 32rpx;
	box-shadow: 0 4rpx 16rpx rgba(76,205,196,0.08);
	text-align: center;
	border: 3rpx solid transparent;
	height: 280rpx;  /* 调整固定高度 */
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.achievement-card.unlocked {
	border-color: #4ECDC4;
	box-shadow: 0 8rpx 25rpx rgba(76,205,196,0.2);
}
.achievement-card.locked {
	opacity: 0.6;
}
.achievement-icon {
	font-size: 60rpx;
	margin-bottom: 16rpx;
	line-height: 1.2;
	flex: 0 0 auto;
}

.achievement-title {
	font-size: 28rpx;
	font-weight: bold;
	color: #2C5530;
	margin-bottom: 8rpx;
	line-height: 1.4;
	height: 40rpx;  /* 固定高度 */
	display: flex;
	align-items: center;
	justify-content: center;
	flex: 0 0 auto;
}

.achievement-desc {
	font-size: 24rpx;
	color: #666;
	margin-bottom: 10rpx;
	line-height: 1.4;
	height: 68rpx;  /* 固定高度 */
	display: flex;
	align-items: center;
	justify-content: center;
	flex: 0 0 auto;
}
.achievement-progress {
	background: #e0f7f4;
	height: 12rpx;
	border-radius: 6rpx;
	overflow: hidden;
	margin-top: 10rpx;
}
.achievement-progress-fill {
	height: 100%;
	background: linear-gradient(45deg, #4ECDC4, #44A08D);
	border-radius: 6rpx;
	transition: width 0.3s;
}
.unlocked-label {
	color: #4ECDC4;
	font-weight: bold;
	margin-top: 10rpx;
}