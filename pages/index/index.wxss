/* 引入字体图标 */
@import "/styles/iconfont.wxss";

.page-container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 24rpx;
}

/* 搜索栏样式 */
.search-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.search-input {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.search-input .icon-search {
  color: #999;
  font-size: 32rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
}

.filter-btn {
  width: 80rpx;
  background: white;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-btn .icon-filter {
  font-size: 36rpx;
  color: #666;
}

/* 头部卡片样式 */
.header-card {
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-container {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
}

.avatar-container .streak-badge {
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  background: #FF6B6B;
  color: white;
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 107, 107, 0.3);
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.motto {
  font-size: 26rpx;
  color: #999;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 2rpx solid #f5f5f5;
}

.stat-item {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #4ECDC4;
  margin-bottom: 4rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 分类标签样式 */
.category-scroll {
  margin-bottom: 24rpx;
  white-space: nowrap;
}

.category-tags {
  display: inline-flex;
  padding: 0 24rpx;
}

.category-tag {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: white;
  border-radius: 30rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.category-tag.active {
  background: #4ECDC4;
  color: white;
}

/* 成就列表样式 */
.achievements-list {
  height: calc(100vh - 440rpx);
}

.achievement-card {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.achievement-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.achievement-date {
  font-size: 24rpx;
  color: #999;
}

.achievement-category {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  color: white;
}

.achievement-content {
  margin-bottom: 20rpx;
}

.achievement-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.achievement-desc {
  font-size: 26rpx;
  color: #666;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.achievement-footer {
  border-top: 2rpx solid #f5f5f5;
  padding-top: 16rpx;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #999;
  font-size: 24rpx;
}

.action-btn.like.active {
  color: #FF6B6B;
}

.action-btn .iconfont {
  font-size: 32rpx;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-state image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}
