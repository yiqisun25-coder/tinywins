/* 页面样式 */
.container {
  padding: 30rpx;
}

.form-group {
  margin-bottom: 30rpx;
  background: white;
  padding: 20rpx;
  border-radius: 12rpx;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 30rpx;
}

.picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #eee;
  font-size: 30rpx;
  color: #333;
}

.textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}

.submit-btn {
  background: #4ECDC4;
  color: white;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 40rpx;
  font-size: 32rpx;
}

.submit-btn:active {
  opacity: 0.8;
}
